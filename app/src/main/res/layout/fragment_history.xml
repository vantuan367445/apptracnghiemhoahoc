<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        app:layout_collapseMode="pin"
        android:background="@color/colorLight_Blue"
        android:id="@+id/toobar_history"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:textSize="@dimen/size20sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="@string/danhsachketquathi"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>
    <ListView
        android:id="@+id/lv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/txt_ronghistory"
        android:text="@string/danhsachtrong"
        android:textSize="@dimen/size15sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>